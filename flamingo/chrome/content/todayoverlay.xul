                    </box>
                    <separator/>
                    <vbox orient="vertical" class="todaycollectionrb">
                        <grid width="800">
                            <columns>
                                <column width="120"/>
                                <column width="80"/>
                                <column width="90"/>
                                <column width="70"/>
                                <column width="70"/>
                                <column width="80"/>
                                <column width="80"/>
                                <column width="80"/>
                                <column width="100"/>
                            </columns>
                            <rows>
                                <row class="todaycollectionhd">
                                    <label value="Client Name"/>
                                    <label value="Prd"/>
                                    <label value="Disb amt"/>
                                    <label value="Inst #"/>
                                    <label value="Prn Amt"/>
