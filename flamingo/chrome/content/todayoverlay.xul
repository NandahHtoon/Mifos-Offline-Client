<overlay id="toverlay"
 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    
    
    <tabpanel id="Today">
        <vbox class="todaymainbox">
            <vbox>
                <box align="center">
                    <image onclick="$('#todaygetdata').toggle('showOrHide ');" src='chrome://flamingo/skin/images/extra/down_icon.gif' width='25' height='25'/><label style="font-size: 15px; padding: 5px;" value="Get data from server"/>
                </box>
                <hbox id="todaygetdata" height="60">
                    <box align="center">
                        <label value="Date"/>
                        <datepicker id="todaydate" type="popup" value="" readonly="true"/>
                        <label value="Loan Officer"/>
                        <menulist label="attn">
